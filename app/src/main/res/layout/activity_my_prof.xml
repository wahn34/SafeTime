<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_prof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lionas.ruwn.fairy.MyProfActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgMyProf"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnChgProf"
        android:layout_below="@+id/btnRotate" />

    <Button
        android:text="이미지 변경"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnChgProf"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="회전"
        android:id="@+id/btnRotate"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="70dp" />

    <Button
        android:text="저장"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnSaveImg" />

    <Button
        android:text="그림자"
        android:layout_height="40dp"
        android:id="@+id/btnBlur"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnRotate"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="70dp" />

    <Button
        android:text="흑백"
        android:layout_height="40dp"
        android:id="@+id/btnBright"
        android:layout_width="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnBlur"
        android:layout_toEndOf="@+id/btnBlur"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />
</RelativeLayout>
